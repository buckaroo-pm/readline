    -DHAVE_PWD_H=1 \
    -DHAVE_STDARG_H=1 \
    -DHAVE_STDBOOL_H=1 \
    -DHAVE_STDLIB_H=1 \
    -DHAVE_STRING_H=1 \
    -DHAVE_STRINGS_H=1 \
