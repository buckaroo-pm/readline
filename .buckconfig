    -DVOID_SIGHANDLER=1 \
    -DHAVE_CHOWN=1 \
    -DHAVE_FCNTL=1 \
    -DHAVE_FNMATCH=1 \
    -DHAVE_GETPWENT=1 \
    -DHAVE_GETPWNAM=1 \
    -DHAVE_GETPWUID=1 \
    -DHAVE_ISASCII=1 \
    -DHAVE_ISWCTYPE=1 \
    -DHAVE_ISWLOWER=1 \
    -DHAVE_ISWUPPER=1 \
    -DHAVE_ISXDIGIT=1 \
    -DHAVE_KILL=1 \
    -DHAVE_LSTAT=1 \
    -DHAVE_MBRLEN=1 \
    -DHAVE_MBRTOWC=1 \
    -DHAVE_MBSRTOWCS=1 \
    -DHAVE_MEMMOVE=1 \
    -DHAVE_PSELECT=1 \
    -DHAVE_PUTENV=1 \
    -DHAVE_READLINK=1 \
    -DHAVE_SELECT=1 \
    -DHAVE_SETENV=1 \
    -DHAVE_SETLOCALE=1 \
    -DHAVE_STRCASECMP=1 \
    -DHAVE_STRCOLL=1 \
    -DHAVE_STRPBRK=1 \
